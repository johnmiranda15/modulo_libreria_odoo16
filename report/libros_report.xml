<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_report_libros" model="ir.actions.report">
            <field name="name">Reporte de Libros</field>
            <field name="model">libros.biblioteca</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">modulo_libreria.report_libros_biblioteca</field>
            <field name="binding_model_id" ref="model_libros_biblioteca"/>
        </record>

        <template id="report_libros_biblioteca">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 style="text-align: center;">Reporte de Libros</h2>
                        <table class="table table-sm table-bordered" style="width: 100%; margin-top: 20px;">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Autor</th>
                                    <th>Fecha de Publicación</th>
                                    <th>ISBN</th>
                                    <th>Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="doc.titulo"/></td>
                                    <td><span t-field="doc.autor_id.name"/></td>
                                    <td><span t-field="doc.fecha_publicacion"/></td>
                                    <td><span t-field="doc.isbn"/></td>
                                    <td><span t-field="doc.cantidad"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
