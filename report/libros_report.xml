<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="action_report_book" model="ir.actions.report">
        <field name="name">Libros Reporte</field>
        <field name="model">libros</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">modulo_libreria.report_book</field>
        <field name="report_file">modulo_libreria.report_book</field>
        <field name="binding_model_id" ref="model_libros"/>
        <field name="binding_type">report</field>
     </record>
     <template id="report_book">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>Libro Report</h2>
                        <p><span t-field="o.name"/></p>
                    </div>
                </t>
            </t>
        </t>
     </template>
</odoo>
